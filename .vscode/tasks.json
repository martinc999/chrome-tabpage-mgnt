{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv",
            "args": ["run", "pytest", "tests", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Format Code with Ruff",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "format", "src", "tests"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Lint Code with Ruff",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "check", "src", "tests"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Fix Code with Ruff",
            "type": "shell",
            "command": "uv",
            "args": ["run", "ruff", "check", "--fix", "src", "tests"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Main Module",
            "type": "shell",
            "command": "uv",
            "args": ["run", "python", "src/chrome_tabpage_mgnt/main.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}

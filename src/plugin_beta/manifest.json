{
  "manifest_version": 3,
  "name": "Chrome Tab Categorizer",
  "version": "1.0",
  "description": "Organize your Chrome tabs using AI-powered categorization",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Tab Categorizer"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}